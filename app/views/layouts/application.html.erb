<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Setup Bootstrap Responsiveness -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <!-- ... -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navbar -->
    <div class="navbar">
      <div class="navbar-content">
        <%= link_to 'All Cocktails', cocktails_path %>
      </div>
      <div class="navbar-content">
        <%= link_to 'New Cocktail', new_cocktail_path %>
      </div>
    </div>

    <!-- Flash error -->
    <% flash.each do |key, value| %>
      <% if value === 'Thank you! ðŸ˜Š' %>
        <div class="flash flash-success alert alert-dismissible fade show" role="alert">
          <%= value %>
          <a data-dismiss="alert" aria-label="Close"><i class="fas fa-times"></i></a>
        </div>
      <% elsif value === 'Something went wrong ðŸ˜… Try again! ðŸ˜‰' %>
        <div class="flash flash-danger alert alert-dismissible fade show" role="alert">
          <%= value %>
          <a data-dismiss="alert" aria-label="Close"><i class="fas fa-times"></i></a>
        </div>
      <% end %>
    <% end %>

    <!-- Body -->
    <div class="main-container">
      <%= yield %>
    </div>

    <!-- Footer -->
    <div class="footer">
      <div class="footer-content">
        <%= link_to "#" do %>
            <i class="fas fa-glass-cheers" style="color: white;"></i>
        <% end %>
      </div>
      <div class="footer-content">
        This website was coded at Le Wagon.
      </div>
    </div>

  </body>
</html>
