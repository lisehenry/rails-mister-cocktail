<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Setup Bootstrap Responsiveness -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <!-- ... -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navbar -->
    <div class="navbar">
      <div class="navbar-content">
        <%= link_to 'My Cocktails', cocktails_path %>
      </div>
      <div class="navbar-content">
        <%= link_to 'New Cocktail', new_cocktail_path %>
      </div>
    </div>

    <!-- Body -->
    <div class="main-container">
      <%= yield %>
    </div>

    <!-- Footer -->
    <div class="footer">
      <div class="footer-content">
        <%= link_to "#" do %>
            <i class="fas fa-glass-cheers" style="color: white;"></i>
          <% end %>
      </div>
      <div class="footer-content">
        <p>This website was coded at Le Wagon.</p>
      </div>
    </div>

  </body>
</html>

