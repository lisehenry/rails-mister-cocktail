<h1 class="text-center">Cocktailicious</h1>
<p class="text-center">Selection of delicious cocktails!</p>

<% if @cocktails.empty? %>
  <br><br><br><h4 class="text-center"><em>Be the first to add a cocktail!</em></h4><br><br><br>
<% else %>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category"
           style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)),
                  url(<%= cl_image_path("sample-1.jpg") %>)">
        <%= link_to (cocktail_path(cocktail.id)) do %>
          <h4><i class="fas fa-cocktail"></i> <%= cocktail.name %></h4>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
