<h1 class="text-center"><%= @cocktail.name %></h1>


<!-- 1 ROW -->
<div class="row">

  <!-- Review list -->
  <div class="col-8">
    <div class="container">
      <h4 class="text-center">All Reviews</h4>
      <p>No review yet!</p>
    </div>
  </div>

  <!-- Image -->
  <div class="col-4">
    <div class="container container-with-image">
    </div>
  </div>

</div>


<!-- 1 ROW -->
<div class="row">

  <!-- Ingredient list -->
  <div class="col-4">
    <div class="container">
      <h4 class="text-center">Ingredient list</h4>
      <ul class="list-inline">
        <% @cocktail.doses.each do |dose| %>
          <li>
            <i class="fas fa-shopping-cart" style="color: #8c00ff;"></i>
            <%= Ingredient.find(dose.ingredient_id).name %> (<%= dose.description %>)
            <%= link_to (dose_path(dose)),
              method: :delete,
              data: { confirm: 'Are you sure?' } do %>
                <i class="far fa-trash-alt" style="color: #ff0000;"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- New ingredient -->
  <div class="col-8">
    <div class="container">
      <h4 class="text-center">Add an ingredient</h4>
      <%= simple_form_for [ @cocktail, @dose ] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>

</div>


<!-- 1 ROW -->
<div class="row">

  <!-- New Review -->
  <div class="col-12">
    <div class="container">
      <h4 class="text-center">You've enjoyed this cocktail? Leave a review!</h4>
      <p>coming soon...</p>
    </div>
  </div>

</div>


<!-- Btn to 'controller#index' -->
<%= link_to 'All Cocktails', cocktails_path, class: "btn btn-dark d-inline-block center mx-auto" %>
